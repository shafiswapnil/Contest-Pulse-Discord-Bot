# Required Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Optional Discord Configuration
CONTEST_ROLE_ID=your_contest_role_id_here

# Optional API Keys
# Note: Currently, the public Codeforces API doesn't require authentication,
# but these settings are included for future compatibility if the API changes
CODEFORCES_API_KEY=your_codeforces_api_key_here
CODEFORCES_API_SECRET=your_codeforces_api_secret_here

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Contest notification settings
# Number of days in advance to fetch contests for (default: 7)
CONTEST_DAYS_AHEAD=7
# Cron schedule for checking contests (default: '0 12 * * *' = daily at 12:00 UTC)
CONTEST_CHECK_SCHEDULE=0 12 * * *

# Server Configuration
PORT=3000 