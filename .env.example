# Required Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
# Channel where scheduled reminders will be sent (command responses go to wherever the command was used)
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Optional Discord Configuration
CONTEST_ROLE_ID=your_contest_role_id_here

# Optional API Keys
# Note: The Codeforces public API currently doesn't require authentication.
# These fields are included for future compatibility but can be left as-is or removed.
# CODEFORCES_API_KEY=your_codeforces_api_key_here
# CODEFORCES_API_SECRET=your_codeforces_api_secret_here

# Clist.by API Credentials (Required for reliable AtCoder contest data)
# Get these by signing up at https://clist.by and checking your profile page
CLIST_USERNAME=your_clist_username_here
CLIST_API_KEY=your_clist_api_key_here

# Optional: Time display settings
# Timezone for displaying contest times (default: UTC)
# For Bangladesh time, use: Asia/Dhaka
TIMEZONE=Asia/Dhaka

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Contest notification settings
# Number of days in advance to fetch contests for (default: 7)
CONTEST_DAYS_AHEAD=7
# Cron schedule for checking contests (default: '0 12 * * *' = daily at 12:00 UTC)
CONTEST_CHECK_SCHEDULE=0 12 * * *

# Server Configuration
PORT=3000 