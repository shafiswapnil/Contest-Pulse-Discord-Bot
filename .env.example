# Required Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
# Channel where scheduled reminders will be sent (command responses go to wherever the command was used)
DISCORD_CHANNEL_ID=your_discord_channel_id

# Optional Discord Configuration
CONTEST_ROLE_ID=optional_role_to_mention
# Discord role ID that can use admin commands (like !setup-reminders)
ADMIN_ROLE_ID=your_admin_role_id_here

# Clist.by API Credentials (required for reliable AtCoder contest data)
CLIST_USERNAME=your_clist_username
CLIST_API_KEY=your_clist_api_key

# Optional: Time display settings
# Timezone for displaying contest times (default: UTC)
# For Bangladesh time, use: Asia/Dhaka
TIMEZONE=Asia/Dhaka

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Contest notification settings
# Number of days in advance to fetch contests for (default: 7)
CONTEST_DAYS_AHEAD=7
# Cron schedule for checking contests (default: '0 12 * * *' = daily at 12:00 UTC)
CONTEST_CHECK_SCHEDULE=0 12 * * *

# Server Configuration
PORT=3000 